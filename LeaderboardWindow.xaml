<Window x:Class="TestTaskGF.LeaderboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskGF"
        mc:Ignorable="d"
        Title="LeaderboardWindow" Closing="LeaderboardWindow_Closing" Loaded="LeaderboardWindow_Loaded" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="Player Name" FontSize="30" Margin="30 0 30 0"></Label>
            <Label Content="Points" FontSize="30" Margin="30 0 30 0"></Label>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0 60 0 0">
            <StackPanel x:Name="leaderboardContainer" Orientation="Vertical" />
        </ScrollViewer>

    </Grid>
</Window>
